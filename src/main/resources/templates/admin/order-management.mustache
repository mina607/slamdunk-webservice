<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>주문 관리 - 호텔 로봇 서비스</title>
    {{>layout/header}}
    <link rel="stylesheet" href="/css/admin_style.css">
    <link rel="stylesheet" href="/css/toast.css">
</head>
<body>

<div class="overlay">
    <div class="admin-container">
        <!-- 사이드바 -->
        {{>layout/aside}}

        <!-- 메인 콘텐츠 -->
        <main class="main-content">
            <!-- 헤더 -->
            <div class="content-header">
                <h2><i class="fas fa-clipboard-list me-2"></i>주문 관리</h2>
                <div class="admin-user">
                    <span>관리자님, 환영합니다</span>
                    <i class="fas fa-user-circle"></i>
                </div>
            </div>

            <!-- 통계 요약 -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-header">
                        <div class="stat-title">대기중</div>
                        <div class="stat-icon blue">
                            <i class="fas fa-clock"></i>
                        </div>
                    </div>
                    <div class="stat-value" id="pending-count">{{! pendingCount}}</div>
                    <div class="stat-label">접수 대기 주문</div>
                </div>

                <div class="stat-card">
                    <div class="stat-header">
                        <div class="stat-title">준비중</div>
                        <div class="stat-icon orange">
                            <i class="fas fa-utensils"></i>
                        </div>
                    </div>
                    <div class="stat-value" id="preparing-count">{{! preparingCount}}</div>
                    <div class="stat-label">조리중인 주문</div>
                </div>

                <div class="stat-card">
                    <div class="stat-header">
                        <div class="stat-title">배달중</div>
                        <div class="stat-icon green">
                            <i class="fas fa-robot"></i>
                        </div>
                    </div>
                    <div class="stat-value" id="delivering-count">{{! deliveringCount}}</div>
                    <div class="stat-label">로봇 배달중</div>
                </div>

                <div class="stat-card">
                    <div class="stat-header">
                        <div class="stat-title">완료</div>
                        <div class="stat-icon red">
                            <i class="fas fa-check-circle"></i>
                        </div>
                    </div>
                    <div class="stat-value" id="completed-count">{{! completedCount}}</div>
                    <div class="stat-label">오늘 완료된 주문</div>
                </div>
            </div>

            <!-- 필터 및 검색 -->
            <div class="dashboard-card">
                <div class="order-filters">
                    <button class="filter-btn active" data-status="all">
                        <i class="fas fa-list me-1"></i> 전체
                    </button>
                    <button class="filter-btn" data-status="pending">
                        <i class="fas fa-clock me-1"></i> 대기중
                    </button>
                    <button class="filter-btn" data-status="preparing">
                        <i class="fas fa-utensils me-1"></i> 준비중
                    </button>
                    <button class="filter-btn" data-status="ready">
                        <i class="fas fa-check me-1"></i> 준비완료
                    </button>
                    <button class="filter-btn" data-status="delivering">
                        <i class="fas fa-robot me-1"></i> 배달중
                    </button>
                    <button class="filter-btn" data-status="completed">
                        <i class="fas fa-check-circle me-1"></i> 완료
                    </button>

                    <div class="search-box" style="position: relative; margin-left: auto;">
                        <i class="fas fa-search search-icon"></i>
                        <input type="text" class="search-input" placeholder="주문번호, 객실번호로 검색...">
                    </div>
                </div>
            </div>

            <!-- 주문 목록 -->
            <div id="order-list">
                {{#orders}}
                    <div class="order-card" data-status="{{status}}">
                        <div class="order-header">
                            <div>
                                <div class="order-number">주문 #{{orderNumber}}</div>
                                <div class="order-time">
                                    <i class="fas fa-clock me-1"></i> {{orderTime}}
                                </div>
                            </div>
                            <span class="order-status status-{{!status}}">{{!statusText}}</span>
                        </div>

                        <div class="order-body">
                            <div class="customer-info">
                                <h4 style="margin-bottom: 1rem; color: #666;">
                                    <i class="fas fa-user me-2"></i>고객 정보
                                </h4>
                                <div class="info-row">
                                    <span class="info-label">객실:</span>
                                    <span class="info-value">{{roomNumber}}호</span>
                                </div>
                                <div class="info-row">
                                    <span class="info-label">연락처:</span>
                                    <span class="info-value">{{phoneNumber}}</span>
                                </div>
                            </div>

                            <div class="order-items">
                                <h4 style="margin-bottom: 1rem; color: #666;">
                                    <i class="fas fa-shopping-bag me-2"></i>주문 내역
                                </h4>
                                {{#items}}
                                    <div class="item-row">
                                        <div>
                                            <span class="item-name">
                                                <span class="item-icon {{icon}}"></span> {{itemName}}
                                            </span>
                                            <span class="item-quantity">x {{quantity}}</span>
                                        </div>
                                        <span class="item-price">₩{{price}}</span>
                                    </div>
                                {{/items}}
                            </div>
                        </div>

                        <div class="order-footer">
                            <div>
                                <div style="color: #666; margin-bottom: 0.25rem;">총 결제금액</div>
                                <div class="total-amount">₩{{totalPrice}}</div>
                            </div>

                            <div class="order-actions">
                                {{!#showRobotButton}}
                                    <button class="action-btn btn-robot" onclick="assignRobot('{{!orderNumber}}')">
                                        <i class="fas fa-robot"></i> 로봇 배달 요청
                                    </button>
                                {{!/showRobotButton}}
                                {{!#showCompleteButton}}
                                    <button class="action-btn btn-complete" onclick="completeOrder('{{!orderNumber}}')">
                                        <i class="fas fa-check"></i> 배달 완료
                                    </button>
                                {{!/showCompleteButton}}
<!--                                <button class="action-btn btn-cancel" onclick="viewOrderDetail('{{!orderNumber}}')">-->
<!--                                    <i class="fas fa-info-circle"></i> 상세보기-->
<!--                                </button>-->
                            </div>
                        </div>
                    </div>
                {{/orders}}

                {{^orders}}
                    <div class="dashboard-card">
                        <div class="empty-state">
                            <i class="fas fa-inbox"></i>
                            <h3>주문이 없습니다</h3>
                            <p>새로운 주문이 들어오면 여기에 표시됩니다.</p>
                        </div>
                    </div>
                {{/orders}}
            </div>
        </main>
    </div>
</div>

<div id="toast-container"></div>

<script src="https://cdn.jsdelivr.net/npm/sockjs-client@1/dist/sockjs.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/stompjs@2.3.3/lib/stomp.min.js"></script>
<script>
    // 필터 버튼 기능
    document.querySelectorAll('.filter-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
            this.classList.add('active');

            const status = this.dataset.status;
            const orders = document.querySelectorAll('.order-card');

            orders.forEach(order => {
                if (status === 'all' || order.dataset.status === status) {
                    order.style.display = 'block';
                } else {
                    order.style.display = 'none';
                }
            });
        });
    });

    // 검색 기능
    document.querySelector('.search-input').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const orders = document.querySelectorAll('.order-card');

        orders.forEach(order => {
            const orderNumber = order.querySelector('.order-number').textContent.toLowerCase();
            const roomNumber = order.querySelector('.info-value').textContent.toLowerCase();

            if (orderNumber.includes(searchTerm) || roomNumber.includes(searchTerm)) {
                order.style.display = 'block';
            } else {
                order.style.display = 'none';
            }
        });
    });

    // 로봇 배달 요청
    function assignRobot(orderNumber) {
        if (confirm(`주문 ${orderNumber}을 로봇에게 배달 요청하시겠습니까?`)) {
            // AJAX 요청으로 서버에 로봇 배달 요청
            fetch('/admin/orders/' + orderNumber + '/assign-robot', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            showToast('로봇 배달이 요청되었습니다.', 'success');
                            // 페이지 새로고침 또는 동적 업데이트
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            showToast('배달 요청에 실패했습니다.', 'error');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        showToast('오류가 발생했습니다.', 'error');
                    });
        }
    }

    // 주문 완료
    function completeOrder(orderNumber) {
        if (confirm(`주문 ${orderNumber}을 완료 처리하시겠습니까?`)) {
            fetch('/admin/orders/' + orderNumber + '/complete', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            showToast('주문이 완료되었습니다.', 'success');
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            showToast('주문 완료 처리에 실패했습니다.', 'error');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        showToast('오류가 발생했습니다.', 'error');
                    });
        }
    }

    // 주문 상세보기
    function viewOrderDetail(orderNumber) {
        window.location.href = '/admin/orders/' + orderNumber;
    }

    // Toast 알림
    function showToast(message, type = 'info') {
        const toast = document.createElement('div');
        toast.className = `toast toast-${type}`;
        toast.innerHTML = `
            <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'}"></i>
            <span>${message}</span>
        `;

        const container = document.getElementById('toast-container');
        container.appendChild(toast);

        setTimeout(() => {
            toast.classList.add('show');
        }, 100);

        setTimeout(() => {
            toast.classList.remove('show');
            setTimeout(() => toast.remove(), 300);
        }, 3000);
    }

    // WebSocket 연결 (실시간 주문 업데이트)
    let stompClient = null;

    function connectWebSocket() {
        const socket = new SockJS('/ws');
        stompClient = Stomp.over(socket);

        stompClient.connect({}, function(frame) {
            console.log('WebSocket 연결됨');

            // 새 주문 알림 구독
            stompClient.subscribe('/topic/orders', function(message) {
                const order = JSON.parse(message.body);
                showToast(`새로운 주문이 접수되었습니다! (${order.roomNumber}호)`, 'success');

                // 페이지 새로고침 또는 동적으로 주문 추가
                setTimeout(() => location.reload(), 2000);
            });

            // 주문 상태 변경 구독
            stompClient.subscribe('/topic/order-status', function(message) {
                const data = JSON.parse(message.body);
                console.log('주문 상태 변경:', data);
                // 동적으로 UI 업데이트
            });
        });
    }

    // 페이지 로드시 WebSocket 연결
    window.addEventListener('load', function() {
        connectWebSocket();
    });
</script>
<script src="/js/app/admin.js"></script>
{{>layout/footer}}
</body>
</html>