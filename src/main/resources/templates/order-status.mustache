<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>주문 내역 - 호텔 로봇 서비스</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/main_style.css">

</head>
<body>

<div class="overlay">
    <div class="order-container">
        <div class="header-container">
            <a href="/" class="back-button">
                <i class="fas fa-arrow-left"></i> 돌아가기
            </a>

            <h1 class="header-title">
                <i class="fas fa-receipt me-3"></i>주문 내역
            </h1>
        </div>

        <div class="order-list-container">
            <!-- 탭 메뉴 -->
            <div class="order-tabs">
                <button class="order-tab active" onclick="switchOrderTab('current')">
                    <i class="fas fa-clock"></i>
                    <span>진행중인 주문</span>
                </button>
                <button class="order-tab" onclick="switchOrderTab('history')">
                    <i class="fas fa-history"></i>
                    <span>이전 주문 내역</span>
                </button>
            </div>

            <!-- 진행중인 주문 -->
            <div class="order-content active" id="current-orders">
                {{#currentOrders}}
                    <div class="order-card">
                        <div class="order-card-header">
                            <div class="order-info">
                                <div class="order-number">#{{orderNumber}}</div>
                                <div class="order-time">{{orderTime}}</div>
                            </div>
                            <div class="status-badge status-inprogress">
                                <i class="fas fa-clock"></i>
                                <span>진행중</span>
                            </div>
                        </div>

                        <div class="order-details-wrapper">
                            <div class="order-items-section">
                                <div class="order-items-title">주문 상품</div>
                                {{#items}}
                                    <div class="order-item">
                                        <div class="item-info">
                                            <div class="item-name"><i class="{{icon}} me-2"></i>{{itemName}}</div>
                                            <div class="item-detail">수량: {{quantity}}개</div>
                                        </div>
                                        <div class="item-price">₩{{price}}</div>
                                    </div>
                                {{/items}}
                            </div>
                        </div>

                        <div class="order-total">
                            <span class="total-label">총 결제금액</span>
                            <span class="total-price">₩{{totalPrice}}</span>
                        </div>
                    </div>
                {{/currentOrders}}

                {{^currentOrders}}
                    <div class="empty-orders">
                        <i class="fas fa-inbox" style="font-size: 48px; color: #ccc;"></i>
                        <p style="margin-top: 20px; color: #999;">진행중인 주문이 없습니다</p>
                    </div>
                {{/currentOrders}}
            </div>

            <!-- 이전 주문 내역 -->
            <div class="order-content" id="history-orders">
                {{#historyOrders}}
                    <div class="order-card">
                        <div class="order-card-header">
                            <div class="order-info">
                                <div class="order-number">#{{orderNumber}}</div>
                                <div class="order-time">{{orderTime}}</div>
                            </div>
                            <div class="status-badge status-completed">
                                <i class="fas fa-check-circle"></i>
                                <span>배달완료</span>
                            </div>
                        </div>

                        <div class="order-details-wrapper">
                            <div class="order-items-section">
                                <div class="order-items-title">주문 상품</div>

                                {{#items}}
                                    <div class="order-item">
                                        <div class="item-info">
                                            <div class="item-name">
                                                <span class="item-icon">{{icon}}</span>{{name}}
                                            </div>
                                            <div class="item-detail">수량: {{quantity}}개</div>
                                        </div>
                                        <div class="item-price">₩{{price}}</div>
                                    </div>
                                {{/items}}
                            </div>

                            <div class="delivery-info-section" style="display: flex; flex-direction: column; justify-content: space-between;">
                                <div></div>
                                <div class="action-buttons" style="margin-top: 0;">
                                    <button class="btn-action btn-reorder">
                                        <i class="fas fa-redo"></i>
                                        <span>재주문</span>
                                    </button>
                                    <button class="btn-action btn-review">
                                        <i class="fas fa-star"></i>
                                        <span>리뷰 작성</span>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="order-total">
                            <span class="total-label">총 결제금액</span>
                            <span class="total-price">₩{{totalPrice}}</span>
                        </div>
                    </div>
                {{/historyOrders}}

                {{^historyOrders}}
                    <div class="empty-orders">
                        <i class="fas fa-inbox" style="font-size: 48px; color: #ccc;"></i>
                        <p style="margin-top: 20px; color: #999;">이전 주문 내역이 없습니다</p>
                    </div>
                {{/historyOrders}}
            </div>
        </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    function switchOrderTab(tabName) {
        // 탭 버튼 활성화 상태 변경
        document.querySelectorAll('.order-tab').forEach(tab => {
            tab.classList.remove('active');
        });
        event.target.closest('.order-tab').classList.add('active');

        // 컨텐츠 표시/숨김
        document.querySelectorAll('.order-content').forEach(content => {
            content.classList.remove('active');
        });

        if (tabName === 'current') {
            document.getElementById('current-orders').classList.add('active');
        } else {
            document.getElementById('history-orders').classList.add('active');
        }
    }

    // 실시간 진행상황 업데이트 (실제로는 서버에서 데이터 받아옴)
    function updateDeliveryStatus() {
        // WebSocket이나 polling으로 실시간 업데이트 구현
    }

    // 페이지 로드 시 실행
    window.onload = function() {
        updateDeliveryStatus();

        switchOrderTab('history');
    };
</script>

</body>
</html>