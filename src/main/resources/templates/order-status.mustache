    function goBackToOrder() {
        const urlParams = new URLSearchParams(window.location.search);
        const room = urlParams.get('room');
        const orderType = urlParams.get('type');

        // 객실이 선택된 경우에만 주문 페이지로 이동
        if (room && orderType) {
            if (orderType === 'food') {
                window.location.href = '/food-delivery?room=' + room;
            } else if (orderType === 'article') {
                window.location.href = '/article-delivery?room=' + room;
            } else {
                history.back();
            }
        } else {
            history.back();
        }
    }


    document.addEventListener('DOMContentLoaded', () => {
        const mainButton = document.getElementById('mainButton');
        const urlParams = new URLSearchParams(window.location.search);
        const room = urlParams.get('room');
        // href에 붙이기
        mainButton.href = "/?room=" + room;


    });





</script>

</body>
</html>